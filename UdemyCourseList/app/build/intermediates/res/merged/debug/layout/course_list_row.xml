<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/list_rowheight">

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/course_id_txt"
            android:layout_marginTop="10dp"
            android:text="@string/course_id"
            android:layout_below="@+id/title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            />

    <TextView
    android:id="@+id/course_id"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/marginleft_10dp"
        android:layout_toRightOf="@+id/course_id_txt"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
    android:layout_height="match_parent"
        android:textSize="16sp"

        />


        <TextView
            android:id="@+id/class_s"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/channel_id"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/channel_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/class_s"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>